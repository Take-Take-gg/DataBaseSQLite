<Window x:Class="WPFDatabse.EliminarDatos"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFDatabse"
        mc:Ignorable="d"
        Title="EliminarDatos" Height="300" Width="300">
    <Grid Background="#c2b0c9">
        <StackPanel Margin="10,59,10,10">
            <Label Content="Escriba el nombre del estudiante que borrará:"/>
            <TextBox x:Name="txtNombre" Margin="0,0,0,5" Background="AntiqueWhite"/>
            <Button Content="Eliminar" x:Name="btnEliminar" Click="btnEliminar_Click" Background="Aqua"/>
        </StackPanel>
    </Grid>
</Window>
